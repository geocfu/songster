<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{HH:mm:ss.SSS}] [%highlight(%-6level)] %msg%n</pattern>
<!--            <pattern>[%d{HH:mm:ss.SSS}] [%highlight(%level)] (%boldGreen(%-15.-15logger{0})) %boldCyan(%-34.-34thread) %red(%10.10X{jda.shard}) %msg%n</pattern>-->
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>